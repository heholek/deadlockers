{
  "manifest_version": 2,

  "name": "Deadlockers",
  "description": "Allows you to save your time by automatically bypassing adf.ly, adfoc.us, bc.vc, ilix.in, linkbucks.com and 100+ shortners!",
  "version": "5.0",
  "options_page": "options.html",

  "browser_action": {
		"default_title": "DeadLockers - Options",
		"default_icon": "icon.png",
		"default_popup": "popup.html"
  },
  "background": {
    "scripts": ["jquery.js", "background.js"]
    },
  "icons": { "16": "icon.png",
			"32": "icon.png",
           "48": "icon.png",
           "64": "icon.png",
          "128": "icon.png" },
  "permissions": [
		"storage",
    "<all_urls>"
  ],
  "web_accessible_resources": [
	  "bg.png",
	  "*.woff",
	  "*.woff2",
	  "options.html",
	  "popupY.html"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

